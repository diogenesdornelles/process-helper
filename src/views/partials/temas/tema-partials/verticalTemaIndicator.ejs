<h3 class="text-lg font-semibold text-gray-900 mb-5">Nossos temas</h3>
<ol class="relative border-l border-gray-200">
  <% if ( temas.length > 0 ) { %>
    <% temas.forEach((tema) => { %>
      <li class="mb-5 ml-4">
          <div class="bg-gray-200 absolute w-3 h-3 rounded-full mt-1.5 -left-1.5 border border-white" id="tema-div-indicator-<%= tema._id %>"></div>
          <time tema-id="<%= tema._id %>" id="tema-indicator-<%= tema._id %>" class="text-gray-400 mb-1 text-sm font-normal leading-none hover:text-blue-700 cursor-pointer select-tema-indicator"><%= tema.name %> </time>
      </li>
    <% }) %>
    <% } %>
</ol>
