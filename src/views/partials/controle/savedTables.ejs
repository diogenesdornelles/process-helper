<% const options = { year: 'numeric', month: 'numeric', day: 'numeric' } %>
<div id="my-saved-tables" class="grid min-w-0 max-w-md h-full overflow-auto ml-3 grid-cols-2 gap-0.5">
  <% tables.forEach(table => { %>
  <a href="#" id="<%= table._id %>" class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow-md hover:bg-gray-100 select-saved-table" table-num="<%= table.numero %>">
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 " style="pointer-events: none">Tabela: <%= table.numero %> </h5>
    <p class="font-normal text-gray-700 " style="pointer-events: none">Criada em: <%=table.createdAt.toLocaleDateString('pt-BR', options)%></p>
    <p class="font-normal text-gray-700 " style="pointer-events: none">Hora: <%=table.createdAt.toLocaleTimeString('pt-BR', { hour: "2-digit", minute: "2-digit", second: "2-digit" })%></p>
    <p class="font-normal text-gray-700 " style="pointer-events: none">Processos: <%= table.processos.length %></p>
  </a>
  <% }) %>
</div>
